// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Worker {
  id      Int       @id @unique @default(autoincrement())
  name    String    @unique
  role    String
  Service Service[]
}

model Service {
  id                 Int     @id @unique @default(autoincrement())
  make               String
  model              String
  year               Int
  engine             String
  vin                String
  owner_name         String
  owner_surname      String
  owner_phone_number String
  status             Boolean @default(false)
  worker             Worker  @relation(fields: [workerName], references: [name])
  workerName         String 
  jobs               Jobs    @relation(fields: [jobsId], references: [id])
  jobsId             Int @default(-1)
}

model Jobs {
  id      Int       @id @unique @default(autoincrement())
  name    String
  price   Int       @default(10000)
  Service Service[]
}
