// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model workers {
  id       Int        @id @unique @default(autoincrement())
  name     String     @unique
  role     String
  Services services[]
}

model services {
  id                 Int                @id @unique @default(autoincrement())
  make               String
  model              String
  year               Int
  engine             String
  color              String @default("czarny")
  vin                String
  plate             String @default("xyz1234")
  owner_name         String
  owner_surname      String
  owner_phone_number String
  status             Boolean            @default(false)
  workers            workers            @relation(fields: [workerName], references: [name])
  workerName         String
  Jobs               jobs[]
  JobsToServices     jobs_to_services[]
}

model jobs {
  id             Int                @id @unique @default(autoincrement())
  name           String
  price          Int                @default(10000)
  time           Int                @default(60)
  parts          parts              @relation(fields: [partId], references: [id])
  partId         Int @default(0)
  Services       services[]
  JobsToServices jobs_to_services[]
}

model jobs_to_services {
  id        Int      @id @unique @default(autoincrement())
  service   services @relation(fields: [serviceId], references: [id])
  serviceId Int
  jobs      jobs     @relation(fields: [jobsId], references: [id])
  jobsId    Int
}

model parts {
  id       Int    @id @unique @default(autoincrement())
  name     String
  quantity Int    @default(1)
  jobs     jobs[]
}
